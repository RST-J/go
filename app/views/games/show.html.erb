<% content_for :header do %>
  <h2><%= Game.model_name.human %>: <%= @game.name%></h2>
<% end %>

<% content_for :content do %>
  <div class="row">
    <div class="col-md-6">
      <dl>
        <dt><%= Game.human_attribute_name :user_id %></dt>
        <dd><%= @game.user.email %></dd>
        <dt><%= Game.human_attribute_name :board_size %></dt>
        <dd><%= @game.human_attribute_value :board_size %></dd>
      </dl>
    </div>
  </div>
<% end %>
