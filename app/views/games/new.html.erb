<% content_for :header do %>
  <h2><%= t_view :heading %></h2>
<% end %>

<% content_for :content do %>
  <%= bootstrap_form_for @game do |f| %>
    <%= f.text_field :name %>
    <%= f.select :board_size, enum_options_for_select(Game, :board_size, sort: false) %>
    <%= f.form_group do %>
      <%= f.primary %>
    <% end %>
  <% end %>
<% end %>
